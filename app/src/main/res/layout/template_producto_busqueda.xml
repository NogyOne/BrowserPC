<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/bg_carrito">

    <ImageView
        android:id="@+id/iv_foto"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ejemplo_producto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE DEL PRODUCTO"
            android:layout_marginBottom="2dp"
            android:textStyle="bold"
            android:textColor="@color/naranja"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_precioDescuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$$$$"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_descuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20% OFF"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/gris_hint"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_precioNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$$$$"
                android:textStyle="bold"
                android:textColor="@color/gris_hint"
                android:textSize="12dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOCK"
            android:layout_marginTop="10dp"
            android:textColor="@color/azul_hex"
            android:textStyle="bold"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESES SIN INTERESES"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gris_hint"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENVÃO GRATIS"
            android:textColor="@color/gris_hint"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>